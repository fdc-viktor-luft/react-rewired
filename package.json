{
  "name": "react-rewired",
  "version": "2.0.0",
  "private": false,
  "description": "Wire your react app as easy as possible",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "store",
    "context",
    "flow"
  ],
  "license": "MIT",
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "homepage": "https://fdc-viktor-luft.github.io/react-rewired/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/react-rewired"
  },
  "bugs": {
    "url": "https://github.com/fdc-viktor-luft/react-rewired/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "docs": "bin/docs.sh",
    "build": "react-scripts build",
    "dist": "bin/dist.sh",
    "test": "react-scripts test",
    "flow": "flow --quiet",
    "eslint": "eslint --cache --cache-location 'misc/.eslintcache' src/",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.js'",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "peerDependencies": {
    "react": ">= 16.6.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "coveralls": "^3.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.92.1",
    "prettier": "^1.16.4",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-scripts": "^2.1.3",
    "spy4js": "^2.3.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/react-rewired/*.{js}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "babel": {
    "comments": false,
    "presets": [
      "@babel/preset-react",
      "@babel/preset-flow",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
