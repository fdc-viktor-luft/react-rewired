{
  "name": "react-rewired",
  "version": "0.5.1",
  "private": false,
  "description": "Wire your react app as easy as possible",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "store",
    "context",
    "flow"
  ],
  "license": "MIT",
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "homepage": "https://fdc-viktor-luft.github.io/react-rewired/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/react-rewired"
  },
  "bugs": {
    "url": "https://github.com/fdc-viktor-luft/react-rewired/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "docs": "react-scripts build && rm -rf docs && mv build docs",
    "dist": "bin/dist.sh",
    "test": "react-scripts test --env=jsdom",
    "flow": "flow --quiet",
    "eslint": "eslint --cache --cache-location 'misc/.eslintcache' src/",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.js'",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "peerDependencies": {
    "react": ">= 16.2.0"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.73.0",
    "prettier": "^1.13.4",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts": "1.1.4",
    "spy4js": "^1.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/react-rewired/*.{js}",
      "!src/react-rewired/index.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "babel": {
    "presets": [
      "react-app",
      [
        "env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  }
}
